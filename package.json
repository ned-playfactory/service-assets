{
  "name": "service-assets",
  "version": "0.1.0",
  "description": "PlayFactory dynamic assets (skins) generator and static server",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "start:dev": "nodemon --watch src --ext js,json --exec node src/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "node --inspect-brk ./node_modules/vitest/vitest.mjs --run",
    "test:e2e": "vitest run --include test/e2e/**/*.spec.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "joi": "^18.0.2",
    "mime": "^4.1.0",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.6",
    "nodemon": "^3.1.11",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "vitest": "^3.2.1",
    "@vitest/coverage-v8": "^3.2.1",
    "vite-tsconfig-paths": "^5.1.0"
  }
}
